<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <navigation-rule>
        <from-view-id>/start.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>navigateMain</from-outcome>
            <to-view-id>/main.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/main.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>navigateStart</from-outcome>
            <to-view-id>/start.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <validator>
        <validator-id>formValidator</validator-id>
        <validator-class>com.zirtoshka.zirtoshka.beans.FormValidator</validator-class>
    </validator>
</faces-config>